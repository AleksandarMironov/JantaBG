<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_backgroud"
    tools:context="com.example.ivan.jantabg.LoginActivity">

    <TextView
        android:id="@+id/textView_loginText"
        android:layout_width="160sp"
        android:layout_height="70sp"
        android:text="Login"
        android:textSize="50sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="#2c52aa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <EditText
        android:id="@+id/editText_loginEmail"
        android:layout_width="310sp"
        android:layout_height="35sp"
        android:gravity="center"
        android:background="@drawable/set_button_borders"
        android:layout_below="@+id/textView_loginText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:textStyle="bold"
        android:textColorHint="#FFFFFF"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:hint="Email Address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_loginPassword"
        android:layout_width="310sp"
        android:layout_height="35sp"
        android:gravity="center"
        android:background="@drawable/set_button_borders"
        android:ems="10"
        android:textStyle="bold"
        android:textColorHint="#FFFFFF"
        android:hint="Passoword"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/editText_loginEmail"
        android:layout_alignLeft="@+id/editText_loginEmail"
        android:layout_alignStart="@+id/editText_loginEmail" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="310sp"
        android:layout_height="35sp"
        android:layout_marginTop="29dp"
        android:text="log in"
        android:textSize="23dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:background="@drawable/button_design"
        android:layout_below="@+id/editText_loginPassword"
        android:layout_alignLeft="@+id/editText_loginPassword"
        android:layout_alignStart="@+id/editText_loginPassword" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="310sp"
        android:layout_height="35sp"
        android:text="Register"
        android:background="@drawable/button_design"
        android:layout_marginTop="12dp"
        android:textSize="23dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_below="@+id/button_login"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login" />

</RelativeLayout>
